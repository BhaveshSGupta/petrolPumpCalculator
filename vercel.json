{
    "version": 1,
    "public": true,
    "builds": [
      { "src": "backend/**/*.js", "use": "@vercel/node" }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/api/$1"
      },
      {
        "src": "/auth/(.*)",
        "dest": "backend/auth/$1"
      },
      {
        "src": "/backend/(.*)",
        "dest": "backend/$1"
      }
    ]
  }
  